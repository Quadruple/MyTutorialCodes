<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.syntaxation.loginpageprototype.SignUpPageActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ID : "
        android:id="@+id/SignUpIDText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Password :"
        android:id="@+id/SignUpPasswordText"
        android:layout_below="@+id/SignUpIDText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Confirm\nPassword :"
        android:id="@+id/SignUpPasswordConfirmText"
        android:layout_below="@+id/SignUpPasswordText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SignUpIDEditText"
        android:width="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/SignUpPasswordEditText"
        android:layout_alignStart="@+id/SignUpPasswordEditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SignUpPasswordEditText"
        android:layout_alignTop="@+id/SignUpPasswordText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:width="200dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SignUpPasswordConfirmEditText"
        android:layout_alignBottom="@+id/SignUpPasswordConfirmText"
        android:layout_alignRight="@+id/SignUpPasswordEditText"
        android:layout_alignEnd="@+id/SignUpPasswordEditText"
        android:width="200dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/SignUpSignUpButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="SignUpSignUpButtonClicked" />
</RelativeLayout>
