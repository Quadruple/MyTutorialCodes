<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.babacan.problemapp.SignUpActivity">

    <TextView
        android:text="E-Mail :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="36dp"
        android:id="@+id/signUpEmailText" />

    <TextView
        android:text="E-Mail Kontrol :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/signUpEmailCheckText"
        android:layout_below="@+id/signUpEmailText"
        android:layout_alignLeft="@+id/signUpEmailText"
        android:layout_alignStart="@+id/signUpEmailText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/signUpEmailCheckInput"
        android:layout_alignBottom="@+id/signUpEmailCheckText"
        android:layout_toRightOf="@+id/signUpEmailCheckText"
        android:layout_toEndOf="@+id/signUpEmailCheckText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/signUpEmailInput"
        android:layout_above="@+id/signUpEmailCheckText"
        android:layout_toRightOf="@+id/signUpEmailText"
        android:layout_toEndOf="@+id/signUpEmailText"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp" />

    <TextView
        android:text="Şifre :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signUpEmailCheckText"
        android:layout_alignLeft="@+id/signUpEmailCheckText"
        android:layout_alignStart="@+id/signUpEmailCheckText"
        android:layout_marginTop="42dp"
        android:id="@+id/signUpPasswordInputText" />

    <TextView
        android:text="Şifre Kontrol :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/signUpPasswordInputText"
        android:layout_alignLeft="@+id/signUpPasswordInputText"
        android:layout_alignStart="@+id/signUpPasswordInputText"
        android:id="@+id/signUpPasswordCheckInputText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/signUpPasswordCheckInput"
        android:layout_alignBottom="@+id/signUpPasswordCheckInputText"
        android:layout_toRightOf="@+id/signUpEmailCheckText"
        android:layout_toEndOf="@+id/signUpEmailCheckText"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/signUpPasswordInput"
        android:layout_alignBottom="@+id/signUpPasswordInputText"
        android:layout_alignLeft="@+id/signUpPasswordCheckInput"
        android:layout_alignStart="@+id/signUpPasswordCheckInput" />

    <CheckBox
        android:text="Şifremi göster!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/signUpEmailCheckText"
        android:layout_alignEnd="@+id/signUpEmailCheckText"
        android:id="@+id/signUpShowPasswordCheckBox"
        android:checked="false" />

    <Button
        android:text="Üye Ol!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:id="@+id/signUpSignUpButton" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/signUpEmailInput"
        android:id="@+id/webServiceResult"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
