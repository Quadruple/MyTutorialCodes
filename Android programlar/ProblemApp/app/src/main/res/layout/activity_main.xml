<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.babacan.problemapp.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/introductionPasswordInput"
        android:layout_alignBottom="@+id/introductionPasswordText"
        android:layout_toRightOf="@+id/introductionPasswordText"
        android:layout_toEndOf="@+id/introductionPasswordText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/introductionIDInput"
        android:layout_alignBottom="@+id/introductionIDText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Şifre :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/introductionPasswordText"
        android:textSize="18sp"
        android:layout_below="@+id/introductionIDText"
        android:layout_alignLeft="@+id/introductionIDText"
        android:layout_alignStart="@+id/introductionIDText" />

    <TextView
        android:text='"Anlat, kulakları sende"'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/introductionSlogan"
        tools:textSize="30dp"
        android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

    <TextView
        android:text="ikon burda olacak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/introductionPasswordInput"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Üye Ol!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/introductionSlogan"
        android:layout_toLeftOf="@+id/introductionIDInput"
        android:layout_toStartOf="@+id/introductionIDInput"
        android:layout_marginTop="77dp"
        android:id="@+id/introductionSignUpButton" />

    <Button
        android:text="Giriş Yap!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/introductionLogInButton"
        android:layout_alignBaseline="@+id/introductionSignUpButton"
        android:layout_alignBottom="@+id/introductionSignUpButton"
        android:layout_alignRight="@+id/introductionSlogan"
        android:layout_alignEnd="@+id/introductionSlogan" />

    <TextView
        android:text="E-mail :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/introductionIDText"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/introductionSlogan"
        android:layout_alignStart="@+id/introductionSlogan" />
</RelativeLayout>
