<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.babacan.bookject.SignUpActivity">

    <TextView
        android:text="Şifre :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signUpPasswordText"
        android:layout_alignBaseline="@+id/signUpPasswordInput"
        android:layout_alignBottom="@+id/signUpPasswordInput"
         />

    <TextView
        android:text="E-Mail Kontrol :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/signUpEmailCheckInput"
        android:layout_alignBottom="@+id/signUpEmailCheckInput"
        android:id="@+id/signUpEmailCheckText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/signUpPasswordCheckInput"
        android:layout_below="@+id/signUpPasswordInput"
        android:layout_alignLeft="@+id/signUpPasswordInput"
        android:layout_alignStart="@+id/signUpPasswordInput"
        android:layout_marginTop="21dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/signUpEmailCheckInput"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/signUpEmailInput"
        android:layout_alignLeft="@+id/signUpEmailInput"
        android:layout_alignStart="@+id/signUpEmailInput" />

    <TextView
        android:text="Kullanıcı Adı :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signUpUsernameText"
        android:layout_below="@+id/signUpPasswordCheckInput"
        android:layout_marginTop="31dp" />

    <TextView
        android:text="E-Mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_alignBaseline="@+id/signUpEmailInput"
        android:layout_alignBottom="@+id/signUpEmailInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/signUpEmailText" />

    <TextView
        android:text="Şifre Kontrol :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signUpPasswordCheckText"
        android:layout_alignBaseline="@+id/signUpPasswordCheckInput"
        android:layout_alignBottom="@+id/signUpPasswordCheckInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Şifremi Göster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/signUpUsernameInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/signUpShowPasswordCheckBox" />

    <Button
        android:text="Kayıt Ol!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signUpSignUpButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/signUpEmailInput"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/signUpShowPasswordCheckBox"
        android:layout_toEndOf="@+id/signUpShowPasswordCheckBox" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/signUpPasswordInput"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/signUpEmailCheckInput"
        android:layout_alignLeft="@+id/signUpEmailCheckInput"
        android:layout_alignStart="@+id/signUpEmailCheckInput" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/signUpUsernameInput"
        android:layout_alignBaseline="@+id/signUpUsernameText"
        android:layout_alignBottom="@+id/signUpUsernameText"
        android:layout_alignLeft="@+id/signUpPasswordCheckInput"
        android:layout_alignStart="@+id/signUpPasswordCheckInput" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/signUpSignUpButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/isEmailRegisteredWebServiceResult"
        android:visibility="gone" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/isEmailRegisteredWebServiceResult"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/isUsernameRegisteredWebServiceResult"
        android:visibility="gone" />
</RelativeLayout>
